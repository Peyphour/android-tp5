<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:columnCount="3"
        android:fitsSystemWindows="false"
        android:rowCount="5">

        <Button
            android:id="@+id/calc_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="handleButtonClick"
            android:text="9" />

        <Button
            android:id="@+id/calc_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="handleButtonClick"
            android:text="8" />

        <Button
            android:id="@+id/calc_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="handleButtonClick"
            android:text="7" />


        <Button
            android:id="@+id/calc_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="handleButtonClick"
            android:text="6" />

        <Button
            android:id="@+id/calc_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="handleButtonClick"
            android:text="5" />

        <Button
            android:id="@+id/calc_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="handleButtonClick"
            android:text="4" />

        <Button
            android:id="@+id/calc_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="handleButtonClick"
            android:text="3" />

        <Button
            android:id="@+id/calc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="handleButtonClick"
            android:text="2" />

        <Button
            android:id="@+id/calc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="handleButtonClick"
            android:text="1" />

        <Button
            android:id="@+id/calc_mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="handleButtonClick"
            android:text="*" />

        <Button
            android:id="@+id/calc_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="handleButtonClick"
            android:text="0" />

        <Button
            android:id="@+id/calc_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:onClick="handleButtonClick"
            android:text="/" />

        <Button
            android:id="@+id/calc_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:onClick="handleButtonClick"
            android:text="+" />

        <Button
            android:id="@+id/calc_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:onClick="handleButtonClick"
            android:text="Clear" />

        <Button
            android:id="@+id/calc_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:onClick="handleButtonClick"
            android:text="-" />

    </GridLayout>

    <Button
        android:id="@+id/calc_equals"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="handleButtonClick"
        android:text="=" />
</LinearLayout>
